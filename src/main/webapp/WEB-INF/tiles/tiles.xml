<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	<definition name="baseLayout" template="/WEB-INF/jsp/layouts/baseLayout.jsp">
		<put-attribute name="title" value="Java Blog" />
		<put-attribute name="header" value="/WEB-INF/jsp/layouts/header.jsp" />
		<put-attribute name="sidebarMenu" value="/WEB-INF/jsp/layouts/sidebarMenu.jsp" />
		<put-attribute name="footer" value="/WEB-INF/jsp/layouts/footer.jsp" />
	</definition>

	<definition name="home" extends="baseLayout">
		<put-attribute name="contentTitle" value="Welcome Java Blog" />
		<put-attribute name="body" value="/WEB-INF/jsp/home.jsp" />
		<put-attribute name="current" value="home" cascade="true"/>
	</definition>
	
	<definition name="search" extends="baseLayout">
		<put-attribute name="contentTitle" value="Search" />
		<put-attribute name="body" value="/WEB-INF/jsp/search.jsp" />
		<put-attribute name="current" value="search" cascade="true"/>
	</definition>
	
	<definition name="result" extends="baseLayout">
		<put-attribute name="contentTitle" value="Result By ID" />
		<put-attribute name="body" value="/WEB-INF/jsp/result.jsp" />
		<put-attribute name="current" value="result" cascade="true"/>
	</definition>
	
	<definition name="resultName" extends="baseLayout">
		<put-attribute name="contentTitle" value="Result By Name" />
		<put-attribute name="body" value="/WEB-INF/jsp/resultName.jsp" />
		<put-attribute name="current" value="resultname" cascade="true"/>
	</definition>


</tiles-definitions>