<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.devMode" value="true" />
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.serve.static" value="false" />
	<constant name="struts.enable.DynamicMethodInvocation" value="true" />
	<constant name="struts.custom.i18n.resources"
		value="/i18n/error-messages, /i18n/webmessages, /i18n/common-messages, /i18n/labels, /env" />
	
	
	<package namespace="/blogs" name="blogs" extends="tiles-default, json-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
				
			<result-type name="json" class="com.googlecode.jsonplugin.JSONResult"/>
		</result-types>

		<action name="home" method="getHome" class="com.struts2.tiles3.web.action.HomeAction">
			<result name="success" type="tiles">home</result>
		</action>
		
		<action name="search" method="getSearch" class="com.struts2.tiles3.web.action.SearchAction">
			<result name="success" type="tiles">search</result>
		</action>
		
		<action name="searchMain" method="getSearchMain" class="com.struts2.tiles3.web.action.SearchMainAction">
			<result name="resultID" type="chain">resultID</result>
			<result name="resultName" type="chain">resultName</result>
		</action>
		
		<action name="resultID" method="getResultID" class="com.struts2.tiles3.web.action.ResultAction">
			<result name="success" type="tiles">result</result>
		</action>
		
		<action name="resultName" method="getResultName" class="com.struts2.tiles3.web.action.ResultAction">
			<result name="success" type="tiles">resultName</result>
		</action>
		
<!-- 		<action name="jsonData" method="getJSONData" class="com.struts2.tiles3.web.action.JSONDataAction"> -->
<!-- 			<result name="success" type="json"></result> -->
<!-- 		</action> -->
		
		<action name="jsonData" class="com.struts2.tiles3.web.action.JSONDataAction">
       	   	<result type="json" />
      	</action>
